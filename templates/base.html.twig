<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Imply{% endblock %}</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="{{ asset('/styles/style.css') }}">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">

    {% block stylesheets %}
    {% endblock %}


</head>
<body>
<div class="container">

    {% include 'sidebar.html.twig' %}

        {% block body %}

        {% endblock %}

</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>


    <script>
        $(document).ready(function () {
            $('.submenu-btn').click(function () {
                var submenu = $(this).next('.submenu');
                var isVisible = submenu.is(':visible');
                $('.submenu-btn').find('span').removeClass('rotate-span');
                $('.submenu').not(submenu).slideUp();
                $('.submenu-btn').not($(this)).removeClass('active');
                submenu.slideToggle();
                $(this).toggleClass('active', !isVisible);
                $(this).find('span').toggleClass('rotate-span', !isVisible);
            });

            $('.toggle-button-1').hide();
            $('.sidebar').toggleClass('hidden');
            $(this).toggleClass('hidden');

            $('nav').animate({
                width: 'toggle'
            }, {
                duration: 1
            });
            let searchBar = document.querySelector('.search-bar');

            $('.toggle-button-1, .toggle-button-2').click(function () {
                if ($(this).data('id') == 1) {
                    $('.toggle-button-1').hide();
                    $('.toggle-button-2').show();
                    searchBar.style.zIndex = 9999

                }

                if($(this).data('id') == 2) {
                    $('.toggle-button-2').hide();
                    $('.toggle-button-1').show();
                    searchBar.style.zIndex = 1

                }

                $('.sidebar').toggleClass('hidden');
                $(this).toggleClass('hidden');

                $('nav').animate({
                    width: 'toggle'
                }, {
                    duration: 500
                });
            });
        });

        $('#orders').click(function () {
            $.confirm({
                async: false,
                title: 'Categorias',
                columnClass: 'col-md-9',
                content: 'URL:/orders',
                buttons: {
                    fechar: function () {
                    }
                }
            });
        });


    </script>
{% endblock %}
</body>
</html>
